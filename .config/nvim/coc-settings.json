{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": { "haskell": { } },
			"settings": {
				"languageServerHaskell": {
					"hlintOn": true,
					"languageServerHaskell.useHieWrapper": true,
					"liquidOn": false,
					"completionSnippetsOn": true
				}
			}
    }
  }
}
